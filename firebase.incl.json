{
  "hosting": {
    "public": "dist",
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/!(*.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=1, stale-while-revalidate=599"
          }
        ]
      }
    ],
    "i18n": {
      "root": "/i18n"
    },
    "redirects": []
  },
  "emulators": {
    "hosting": {
      "port": 8080
    }
  }
}
